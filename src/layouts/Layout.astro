---
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;

// Supports weights 100-900
import '@fontsource-variable/lexend';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} {description}</title>
		
	</head>
	<body>
		<main class="flex justify-center items-center w-full h-full absolute ">
			<slot />
		</main>
		
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		
		);
	}

	
	html {
		width: auto;
		height: auto;
		font-family: 'Lexend Variable', sans-serif;
		background: #101624;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco, 
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	h1{
		color: white;
  font-weight: lighter;
  font-size: 1.25rem; /* Esto es equivalente a 20px, asumiendo un tama√±o de fuente base de 16px */
  padding: 0.5rem;
	}

</style>
