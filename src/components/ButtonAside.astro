---
interface props{
    href: any;
}
const {href} = Astro.props
---

<li>
    <a
        target="_blank"
        rel="noopener noreferrer" 
        href={href} class="flex gap-4 text-white hover:text-pink-600 items-center transform translate-x-0 translate-y-0 translate-z-0 text-1rem border-2 border-blue-500 rounded-md p-4">
       <slot/>
    </a>

</li>