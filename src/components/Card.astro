import information from '../lib/informacionJson.json'
import Profile from '../components/Profile.astro'
---

<li class="link-card hover:border-2 hover:border-blue-500 hover:rounded-md  w-full h-full">
	<menu class="w-full h-full">
		<section class="w-full h-full  flex items-center justify-center">
			
			<slot/>
		</section>
		
		
	</menu>


	

		
	
</li>
<style>
	.link-card {
		width: 100%;
		height: 100%;
		list-style: none;
		border: solid 1px #23262d;
		display: flex;
		flex-direction: ;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background: linear-gradient(to right, #3d3b3b, #5853540a);
		border: 2px solid #a7799d; /* Color del borde al hacer hover */
  		border-radius: 0.375rem;

		
	}


	
</style>
